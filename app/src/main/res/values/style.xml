<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RateGuide.ButtonTypesMain" parent="Theme.RateGuide">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
<!--        <item name="android:colorPrimary">@color/orange</item>-->
        <item name="android:rotation">15</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:foreground">@drawable/custom_button_foreground</item>
    </style>


    <style name="Theme.RateGuide.ButtonTypes" parent="Theme.RateGuide">
        <item name="colorPrimary">@color/green</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:color">@color/orange</item>
        <item name="android:foreground">@drawable/custom_button_foreground</item>
        <item name="android:colorPrimary">@color/orange</item>
        <item name="android:layout_margin">5dp</item>
        <!--        <item name="android:shadowColor">@color/orange</item>-->
        <!--        <item name="android:shadowRadius">@color/orange</item>-->
    </style>


    <style name="Theme.RateGuide.FontTittle" parent="Theme.RateGuide">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.RateGuide.FontAdditional" parent="Theme.RateGuide">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:textAllCaps">true</item>
